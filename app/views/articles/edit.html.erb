<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <%= simple_form_for @article do |f| %>
      <%= f.error_notification %>
      <%= f.input :title %>
      <%= f.input :body,  :input_html => {:rows => 30} %>
      <%= f.input :slug, required: true, label: "Url of the article" %>
      <%= f.input :previous_url, "Previous article url ?"  %>
      <%= f.input :next_url,  "Next article url ?" %>

      <%= f.button :submit, "Create", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
