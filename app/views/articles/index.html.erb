<br>
<div class="container">
  <div class="row">
    <%= link_to new_article_path, class:"btn btn-success" do %>
    Create new article  <i class="fa fa-plus"></i>
    <% end %>
    <%= link_to categories_path, class:"btn btn-default" do %>
    View categories <i class="fa fa-eye"></i>
    <% end %>
    <br>
    <br>
    <table class="table table-striped table-hover table-bordered dataTable-no-heading" style="margin-top: 0px !important">
      <thead>
        <tr>
          <th class="col-xs-1">id</th>
          <th class="col-xs-3">title</th>
          <th class="col-xs-2" >categories</th>
          <th class="col-xs-1">sub articles</th>
          <th class="col-xs-4">actions</th>
        </tr>
      </thead>
      <tbody>
        <% @articles.each do |article| %>
        <tr class="tr-hoverable">
          <td><%= article.id %></td>
          <td> <%= article.title %> </td>
          <td><% article.categories.each do |category| %> <span><%= category.label %></span> <% end %> </td>
          <td style="text-align: center"><%= article.childs.size %></td>
          <td>
            <%= link_to article_path(article), class:"btn btn-primary" do %>
            Show <i class="fa fa-eye"></i>
            <% end %>
            <% if article.childs.present? %>
            <%= link_to view_all_related_article_path(article), class:"btn btn-primary" do %>
            Show all <i class="fa fa-th-list"></i>
            <% end %>
            <% end %>
            <%= link_to edit_article_path(article), class:"btn btn-info" do %>
            Edit <i class="fa fa-pencil"></i>
            <% end %>
            <%= link_to article_path(article), method: :delete, class:"btn btn-danger" do %>
            <i class="fa fa-trash"></i>
            <% end %>

          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
