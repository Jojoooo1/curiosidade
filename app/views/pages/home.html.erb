<% if params[:page].nil? || params[:page] == "1" %>
<!-- Featured Slide Start -->
<section id="fp-container" class="clearfix">
  <div class="container">
    <div class="row">
      <div class="feuture-posts">
        <!-- Slider Start -->
        <div class="col-sm-6 big-section">
          <!-- Slider counter -->
          <div class='fbt-slide-nav'>
            <span class='fbt-slide-pager'></span>
          </div>

          <div class="fp-slides">
            <% unless @main_articles.nil? %>
            <%= @main_articles.each do |article| %>
            <%= render partial: "shared/main_slider", locals: {article: article} %>
            <% end %>
            <% end %>
          </div>
          <nav class="nav-growpop">
            <div>
              <a class="fp-prev" href="#fp-prev"><i class="fa fa-chevron-circle-left" aria-hidden="true"></i></a>
              <a class="fp-next" href="#fp-next"><i class="fa fa-chevron-circle-right" aria-hidden="true"></i></a>
            </div>
          </nav>
        </div><!-- Slider End -->

        <!-- Slide Small Start -->
        <div class="col-sm-6 small-section">
          <% unless @main_small_articles.blank? %>
          <%= render partial: "shared/main_medium", locals: {article: @main_small_articles.first} %>
          <% end %>
          <div class="row">
            <div class="fp-small">
             <% unless @main_small_articles.blank? %>
             <% @main_small_articles.last(2).each do |article| %>
             <%= render partial: "shared/main_small", locals: {article: article} %>
             <% end %>
             <% end %>
           </div>
         </div>
       </div><!-- Slide Small End -->

     </div>
   </div>
 </div>
</section><!-- Featured Slide End -->
<% end %>
<!-- Main Content Start -->
<section id="main-content" class="fbt-blog-grid clearfix">
  <div class="container">
    <div class="row">
      <!-- Post Outer Start -->
      <div class="outer-wrapper clearfix">
        <!-- Post Wrapper Start -->
        <div class="fbt-col-lg-9 col-md-8 col-sm-6 post-wrapper">
          <div class="row">
            <!-- Post Content Start -->
            <div class="fbt-col-lg-12 col-md-12 post-container clearfix">
              <div class="title-wrapper border-main">
                <h2><span class="color-main">Articles</span></h2>
              </div>
              <div class="row">
                <% unless @latest_articles.nil? %>
                <% @latest_articles.each do |article| %>
                <%= render partial: "shared/square_article", locals: {article: article} %>
                <% end %>
                <% end %>
              </div>
              <!-- Pagination Start -->
              <div class="pagination-box">
                <%= paginate @latest_articles %>
              </div>
              <!-- Pagination End -->
            </div><!-- Post Content End -->
          </div>
        </div><!-- Post Wrapper End -->
        <!-- Post Sidebar Start -->
        <div class="fbt-col-lg-3 col-md-4 col-sm-6 post-sidebar clearfix">
          <div class="theiaStickySidebar">
            <!-- Advertisement Start -->
            <%= render partial: "home_advertisement" %>
            <!-- Advertisement End -->
          </div>
        </div>
      </div><!-- Post Sidebar End -->


    </div>
  </div><!-- Post Sidebar End -->
</div><!-- Post Outer End -->
</div>
</div>

<a href="#" id="BackToTop"><i class="fa fa-angle-up"></i></a>
<div class="navbar-fixed-bottom"></div>

